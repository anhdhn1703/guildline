{
  "name": "markdown-viewer",
  "version": "1.0.0",
  "description": "Ứng dụng web hiển thị và quản lý nội dung Markdown",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client-install": "cd client && npm install",
    "client-build": "cd client && npm run build",
    "client-dev": "cd client && npm run serve",
    "dev-full": "concurrently \"npm run dev\" \"npm run client-dev\""
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "cors": "^2.8.5",
    "decompress": "^4.2.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
} 